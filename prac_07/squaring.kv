BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
            on_text: app.handle_calculate()
        Button:
            text: 'Square'
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(input_number.text)
        Label:
            id: output_label
            font_size: 48
            color: (1, 0, 0.7, 0.3)

    BoxLayout:
        Label:
            text: 'Enter a number and press "Square"'
